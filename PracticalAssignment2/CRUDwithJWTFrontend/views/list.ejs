<html lang="en">
<head>
	<meta charset="utf-8">
	<title>CRUD Node.js </title>
  <link href="/css/style.css" rel="stylesheet" type="text/css"/>
</head>
<div class="container">
<h2> Students </h2>
<a href="/students/create" class="btn btn-success">New Student</a>
<br/>
<br/>
<br/>
<table class="table table-striped" id="mytable">
  <thead>  
  <tr>
        <th>id</th>
        <th>Name</th>
        <th>Gender</th>
        <th>City</th>
  </tr>
  </thead>
  <tbody>
  <!-- Loop through students -->
  <% for(var i = 0; i < results.length; i++) {%>
    <tr>
      
      <td><%= results[i].Sid%></td>
      <td><%= results[i].Sname %></td>
      <td><%= results[i].Gender %></td>
      <td><%= results[i].City %></td>
      <td><a href="/students/delete/<%= results[i]._id %>" class="btn btn-sm btn-danger delete" onclick="return confirm('are you sure to delete')">Delete</a>
        <a href="/students/search/<%= results[i]._id %>"  class="btn btn-sm btn-info edit">Edit</a>
    </td>
    </tr>
  <% } %>
</tbody>
</table>
</div>